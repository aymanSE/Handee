          <section class="py-5">
          
              <div class="container px-4 px-lg-5 mt-5">
                          <form asp-action="Product" asp-controller="Home" method="post">
            <input type="text" name="name" placeholder="Name Product" class=" mx-md-2 mx-sm-1 mx-3 my-sm-0 my-2 form-control" style="width:300px" > 

            <input type="submit" value="search" class="btn" style="background-color:#EB6304;color:white" > 
            </form> 
				<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
         
					@foreach (var item in Model) { 
						 <div class="col mb-5">
                    
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Sale badge-->
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                            <!-- Product image-->
                            <img class="card-img-top" src=@Url.Content("~/assets/Images/"+item.Imagepath)  width="100" height="200"  asp-append-version="true"  />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@item.Name</h5>
                                    <!-- Product price-->
                                    
                                  $@item.Price
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto"asp-action="Pay" asp-route-id="@item.Productid">Buy</a></div>
                            </div>
                        </div>
                    </div>
                 
                </div>   
