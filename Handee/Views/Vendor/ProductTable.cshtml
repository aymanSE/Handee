@model IEnumerable<Handee.Models.Product>
@{
      Layout =  "~/views/shared/_VendorLayout.cshtml";
}
   <div class="card mb-4">
            <div class="card-header pb-0">
              <h6>Sales table</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0" id="example">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Price</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Not Sold</th>
                   
                    </tr>
                  </thead>
                  <tbody>
                 @foreach( var item in Model  ) 
                 {
                      <tr>
                          <td>
                              <div class="d-flex px-2 py-1">
                                  <div>
                                      <img src=@Url.Content("~/assets/Images/"+Model.Where(x=>x.Productid==item.Productid).SingleOrDefault().Imagepath) class="avatar avatar-sm me-3" alt="user1">
                                  </div>
                                  <div class="d-flex flex-column justify-content-center">
                                      <h6 class="mb-0 text-sm">@Model.Where(x=>x.Productid==item.Productid).SingleOrDefault().Name</h6>

                                  </div>
                              </div>
                          </td>
                          <td>
                              <p class="text-xs text-secondary mb-0">@Model.Where(x=>x.Productid==item.Productid).SingleOrDefault().Price</p>

                          </td>
                            <td>
                              <p class="text-xs text-secondary mb-0">@item.Isavilable</p>

                          </td>
                          <td class="align-middle">
                              <a  asp-action="Edit" asp-controller="Product" class="text-secondary font-weight-bold text-xs" asp-route-id="@item.Productid" data-toggle="tooltip" data-original-title="Edit user">
                                  Edit
                              </a>
                          </td>
                      </tr>
                   }
                    
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        </div>