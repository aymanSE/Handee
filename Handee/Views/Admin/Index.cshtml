@model Tuple<IEnumerable<Handee.Models.Userr>, IEnumerable<Handee.Models.Role>,IEnumerable<Handee.Models.Contract>> 
@{
    
      Layout =  "~/views/shared/_adminLayout1.cshtml";
}
      
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0">
              <h6>Accounts table</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Email</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Role</th>
                    </tr>
                  </thead>
                  <tbody>
                 @foreach( var item in Model.Item1  ) 
                 {
                      <tr>
                          <td>
                              <div class="d-flex px-2 py-1">
                                  <div>
                                      <img src=@Url.Content("~/assets/Images/"+item.Imagepath) class="avatar avatar-sm me-3" alt="user1">
                                  </div>
                                  <div class="d-flex flex-column justify-content-center">
                                      <h6 class="mb-0 text-sm">@item.Fname @item.Lname</h6>

                                  </div>
                              </div>
                          </td>
                          <td>
                              <p class="text-xs text-secondary mb-0">@item.Email</p>

                          </td>
                             <td>
                              <p class="text-xs text-secondary mb-0">@Model.Item2.Where(x=> x.Roleid==item.Roleid).SingleOrDefault().Rolename</p>

                          </td>
                          <td class="align-middle">
                              <a  asp-action="Edit" asp-controller="Userrs" class="text-secondary font-weight-bold text-xs" asp-route-id="@item.Userid" data-toggle="tooltip" data-original-title="Edit user">
                                  Edit
                              </a>
                          </td>
                      </tr>
                   }
                    
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
 
      
    </div>
      <div class="card mb-4">
            <div class="card-header pb-0">
              <h6>Contact Messages</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0" id="example">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Number</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Message</th>
                   
                    </tr>
                  </thead>
                  <tbody>
                 @foreach( var item in Model.Item3  ) 
                 {
                      <tr>
                        
                          <td>
                              <p class="text-xs text-secondary mb-0"> @item.Email </p>

                          </td>
                            <td>
                              <p class="text-xs text-secondary mb-0">@item.Num</p>

                          </td>
                           <td>
                              <p class="text-xs text-secondary mb-0">@item.Note</p>

                          </td> 
                          <td class="align-middle">
                              <a  asp-action="Delete" asp-controller="Contracts1" class="text-secondary font-weight-bold text-xs" asp-route-id="@item.Hid" data-toggle="tooltip" data-original-title="Edit user">
                                  Delete
                              </a>
                          </td>
                      </tr>
                      
                   }
                  @*  <tr>
                          <td>
                              <p class="text-xs text-secondary mb-0">@Model.Item3.ToList().ToString()</p>

                          </td>
                    </tr>*@
                  </tbody>
                </table>
              </div>
            </div>
          </div>
    
